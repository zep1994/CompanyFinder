                   @model IEnumerable<CompanyFinderAPI.Models.Company>

<h1>Companies</h1>

<table class="table">
    <thead>
        <tr>
            <th>Symbol</th>
            <th>Name</th>
            <th>Sector</th>
            <th>Industry</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Symbol</td>
                <td>@company.Name</td>
                <td>@company.Sector</td>
                <td>@company.Industry</td>
                <td>
                    <a asp-controller="Company" asp-action="ShowCompany" asp-route-id="@company.Id">View</a> |
                    <a asp-controller="Company" asp-action="DeleteCompany" asp-route-id="@company.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

