@model CompanyFinderAPI.Models.Company

<h2>@Model.Name</h2>

<p>@Model.Description</p>
<p>Sector: @Model.Sector</p>
<p>Industry: @Model.Industry</p>

<!-- Add a button or form to save the displayed data -->
<form asp-action="SaveCompany" method="post">
    <input type="hidden" asp-for="Name" name="Name" />
    <input type="hidden" asp-for="Description" name="Description" />
    <input type="hidden" asp-for="Sector" name="Sector" />
    <input type="hidden" asp-for="Industry" name="Industry" />

    <button type="submit" class="btn btn-primary mt-3">Save to WatchList</button>
</form>