@model IEnumerable<CompanyFinderAPI.Models.WatchLists>

<h1>WatchList</h1>

<!-- Add create button at the top -->
<a href="/create" class="btn">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Associated Companies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var watchList in Model)
        {
            <tr>
                <!-- Make watchList.Name clickable -->
                <td><a href="/api/watchlists/@watchList.Id">@watchList.Name</a></td>
                <td>
                    @if (watchList.Companies.Any())
                    {
                        foreach (var company in watchList.Companies)
                        {
                            <p>@company.Name</p>
                        }
                    }
                    else
                    {
                        <p>No associated companies</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
