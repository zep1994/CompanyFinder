@model CompanyFinderAPI.ViewModels.WatchListsViewModel

<h1>Create WatchList</h1>

<form action="https://localhost:7233/api/watchlists/Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sector" class="control-label"></label>
        <input asp-for="Sector" class="form-control" />
        <span asp-validation-for="Sector" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Industry" class="control-label"></label>
        <input asp-for="Industry" class="form-control" />
        <span asp-validation-for="Industry" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Select Companies for WatchList</label>
        <div>
            @foreach (var company in ViewBag.Companies)
            {
                <input type="checkbox" name="SelectedCompanyIds" value="@company.Value" /> @company.Text
            }
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create WatchList</button>
    </div>
</form>
